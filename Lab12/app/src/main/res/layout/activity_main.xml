<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:text="Hello World!"
        app:layout_constraintBottom_toTopOf="@+id/btnTextChange"
        app:layout_constraintEnd_toEndOf="@+id/btnTextChange"
        app:layout_constraintStart_toStartOf="@+id/btnTextChange" />

    <Button
        android:id="@+id/btnTextChange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="252dp"
        android:text="Change Text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnChangeColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38dp"
        android:text="Change Color"
        app:layout_constraintEnd_toEndOf="@+id/btnTextChange"
        app:layout_constraintStart_toStartOf="@+id/btnTextChange"
        app:layout_constraintTop_toBottomOf="@+id/btnTextChange" />

</androidx.constraintlayout.widget.ConstraintLayout>